@model UpdateBrandDto

@{
    ViewData["Title"] = "UpdateBrand";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}



<div class="page-content">
    <div class="container-fluid">
        <div class="card">
            <div class="card-body">

                <h4 class="card-title">Yeni Araç Marka Girişi</h4>
                <p class="card-subtitle mb-4">Ara. Markası İle İlgili Temel Özellikleri Eksiksiz Doldurmanız Önemlidir. Veri Girişinden Sonra Kaydet Butonuna Tıklayarak İşlemi Tamamlayabilirsiniz.</p>

                <form method="post">
                    <input type="hidden" asp-for="BrandID"/>
                    <div class="form-group">
                        <label>Marka Adı</label>
                        <input type="text" class="form-control" placeholder="Marka Adı Girişi Yapınız" asp-for="Name">
                    </div>


                    <button type="submit" class="btn btn-primary waves-effect waves-light">Markayı Kaydet</button>
                </form>

            </div>
        </div>
    </div>





