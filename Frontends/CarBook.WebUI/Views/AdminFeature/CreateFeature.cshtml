@model CreateFeatureDto

@{
    ViewData["Title"] = "CreateFeature";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="page-content">
    <div class="container-fluid">
        <div class="card">
            <div class="card-body">

                <h4 class="card-title">Yeni Araç Girişi</h4>
                <p class="card-subtitle mb-4">Araç İle İlgili Temel Özellikleri Eksiksiz Doldurmanız Önemlidir. Veri Girişinden Sonra Kaydet Butonuna Tıklayarak İşlemi Tamamlayabilirsiniz.</p>

                <form method="post">
                    
                    <div class="form-group">
                        <label>Özellik Adı</label>
                        <input type="text" class="form-control" placeholder="Özellik Adı Girişi Yapınız" asp-for="Name">
                    </div>
                   
                  
                    <button type="submit" class="btn btn-primary waves-effect waves-light">Özelliği Kaydet</button>
                </form>

            </div> <!-- end card-body-->
        </div>
    </div>
</div>


