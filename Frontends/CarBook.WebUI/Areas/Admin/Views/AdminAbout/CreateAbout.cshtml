@model CreateAboutDto

@{
    ViewData["Title"] = "CreateAbout";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="page-content">
    <div class="container-fluid">
        <div class="card">
            <div class="card-body">

                <h4 class="card-title">Yeni Hakkımda Girişi</h4>
                <p class="card-subtitle mb-4">Hakkımda İle İlgili Temel Özellikleri Eksiksiz Doldurmanız Önemlidir. Veri Girişinden Sonra Kaydet Butonuna Tıklayarak İşlemi Tamamlayabilirsiniz.</p>

                <form method="post">

                    <div class="form-group">
                        <label>Başlık</label>
                        <input type="text" class="form-control" placeholder="Başlık Girişi Yapınız" asp-for="Title">
                    </div>
                    <div class="form-group">
                        <label>Açıklama</label>
                        <textarea rows="5" placeholder="Açıklama Girişi Yapınız" class="form-control" asp-for="Description"></textarea>
                    </div>
                    <div class="form-group">
                        <label>Hakkımda Kapak Fotoğrafı Linki</label>
                        <input type="text" class="form-control" placeholder="Hakkımda Kapak Fotoğrafı Girişi Yapınız" asp-for="ImageUrl">
                    </div>
              



                    <button type="submit" class="btn btn-primary waves-effect waves-light">Hakkımda Bilgisini Kaydet</button>
                </form>

            </div>
        </div>
    </div>

</div>




