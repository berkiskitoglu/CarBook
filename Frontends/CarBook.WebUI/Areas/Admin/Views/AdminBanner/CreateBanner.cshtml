@model CreateBannerDto

@{
    ViewData["Title"] = "CreateBanner";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}




<div class="page-content">
    <div class="container-fluid">
        <div class="card">
            <div class="card-body">

                <h4 class="card-title">Yeni Banner Girişi</h4>
                <p class="card-subtitle mb-4">Banner İle İlgili Temel Özellikleri Eksiksiz Doldurmanız Önemlidir. Veri Girişinden Sonra Kaydet Butonuna Tıklayarak İşlemi Tamamlayabilirsiniz.</p>

                <form method="post">

                    <div class="form-group">
                        <label>Başlık</label>
                        <input type="text" class="form-control" placeholder="Başlık Girişi Yapınız" asp-for="Title">
                    </div>
                    <div class="form-group">
                        <label>Açıklama</label>
                        <input type="text" class="form-control" placeholder="Açıklama Girişi Yapınız" asp-for="Description">
                    </div>
                    <div class="form-group">
                        <label>Video Açıklaması</label>
                        <input type="text" class="form-control" placeholder="Video Açıklaması Girişi Yapınız" asp-for="VideoDescription">
                    </div>
                    <div class="form-group">
                        <label>Video Url</label>
                        <input type="text" class="form-control" placeholder="Video'nun Youtube  Embed Linkini Giriniz" asp-for="VideoUrl">
                    </div>
                  


                    <button type="submit" class="btn btn-primary waves-effect waves-light">Banner Bilgisini Kaydet</button>
                </form>

            </div>
        </div>
    </div>

</div>



