@model CreateCategoryDto

@{
    ViewData["Title"] = "CreateCategory";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="page-content">
    <div class="container-fluid">
        <div class="card">
            <div class="card-body">

                <h4 class="card-title">Yeni Blog Kategori Girişi</h4>
                <p class="card-subtitle mb-4">Kategori İle İlgili Temel Özellikleri Eksiksiz Doldurmanız Önemlidir. Veri Girişinden Sonra Kaydet Butonuna Tıklayarak İşlemi Tamamlayabilirsiniz.</p>

                <form method="post">

                    <div class="form-group">
                        <label>Kategori Ad</label>
                        <input type="text" class="form-control" placeholder="Kategori Adı Girişi Yapınız" asp-for="Name">
                    </div>
       
           
                    <button type="submit" class="btn btn-primary waves-effect waves-light">Kategori Bilgisini Kaydet</button>
                </form>

            </div>
        </div>
    </div>

</div>





